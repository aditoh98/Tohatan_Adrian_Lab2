@model IEnumerable<Tohatan_Adrian_Lab2.Models.LibraryViewModels.OrderGroup>
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
    ViewData["Title"] = "Ordered Books Statistics";
}

<h2>Ordered Books Statistics</h2>

<table>
    <tr>
        <th>
            Order Date
        </th>
        <th>
            Ordered Books
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @item.BookCount
            </td>
        </tr>

    }
</table>

}
